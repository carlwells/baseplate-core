{
  "name": "baseplate-core",
  "main": "server/index.js",
  "version": "1.6.0",
  "license": "MIT",
  "description": "A tool for building prototypes and pattern libraries.",
  "author": "Made Media Ltd. <developers@mademedia.co.uk> (made.media)",
  "contrbutors": [
    "David Rapson <david@davidrapson.co.uk> (davidrapson.co.uk)"
  ],
  "repository": "github:MadeHQ/baseplate-core",
  "engines": {
    "node": ">=4.0.0"
  },
  "keywords": [
    "styleguide",
    "components",
    "patterns",
    "prototyping"
  ],
  "scripts": {
    "clientJs": "cd client/static/ && uglifyjs baseplate.js -o baseplate.min.js",
    "clientCss": "cd client/static/ && cleancss baseplate.css -o baseplate.min.css",
    "build": "npm run clientJs && npm run clientCss",
    "lint": "xo -- server/{*,**/*}.js client/*.js",
    "requiresafe": "nsp check",
    "test": "npm run lint && ava",
    "posttest": "npm run requiresafe"
  },
  "pre-commit": [
    "lint"
  ],
  "xo": {
    "space": 4,
    "rules": {
      "unicorn/filename-case": [
        "error",
        "kebabCase"
      ]
    }
  },
  "dependencies": {
    "color": "1.0.2",
    "compression": "1.6.2",
    "errorhandler": "1.5.0",
    "express": "4.14.0",
    "express-handlebars": "3.0.0",
    "glob": "7.1.0",
    "handlebars": "4.0.6",
    "http-auth": "3.1.1",
    "lodash": "4.17.2",
    "lorem-ipsum": "1.0.3",
    "minimist": "1.2.0",
    "morgan": "1.7.0",
    "require-directory": "2.1.1",
    "showdown": "1.5.3",
    "url-slug": "2.0.0"
  },
  "devDependencies": {
    "ava": "0.17.0",
    "clean-css": "3.4.23",
    "nsp": "2.6.2",
    "pre-commit": "1.2.2",
    "temp-write": "2.1.0",
    "uglifyjs": "2.4.10",
    "xo": "0.17.1"
  }
}
